<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.riil.resmodel.dao.impl.metricGroupDao">

	<resultMap id="metricGroupResultMap" type="com.riil.base.resmodel.pojo.base.MetricGroupPojo">
		<result property="desc" column="C_DESC" javaType="string" jdbcType="VARCHAR" />
		<result property="id" column="C_ID" javaType="string" jdbcType="VARCHAR" />
		<result property="groupType" column="C_GROUP_TYPE" javaType="string" jdbcType="VARCHAR" />
		<result property="name" column="C_NAME" javaType="string" jdbcType="VARCHAR" />
		<result property="sortId" column="C_SORT_ID" javaType="_int" jdbcType="SMALLINT" />
		<result property="tag1" column="C_TAG1" javaType="string" jdbcType="VARCHAR" />
		<result property="tag2" column="C_TAG2" javaType="string" jdbcType="VARCHAR" />
		<result property="tag3" column="C_TAG3" javaType="string" jdbcType="VARCHAR" />
		<result property="tag4" column="C_TAG4" javaType="string" jdbcType="VARCHAR" />
	</resultMap>

	<!-- Select All POJO object -->
	<select id="select_all" 
		resultMap="metricGroupResultMap">
		SELECT C_DESC, C_ID, C_GROUP_TYPE, C_NAME, C_SORT_ID, C_TAG1, C_TAG2,
		C_TAG3, C_TAG4
		FROM t_moni_metric_group
	</select>
	<select id="select_all_metric_rel" resultType="map">
		SELECT
		C_METRIC_GROUP_ID, C_METRIC_ID FROM t_moni_metric_group_rel;
	</select>
</mapper>
