<mapper namespace="com.riil.base.resmodel.impl.db.dao.MetricGroupDao">

	<resultMap id="metricGroupResultMap" type="com.riil.base.binding.pojo.MetricGroupExtendPojo">
		<result property="desc" column="C_DESC" javaType="string" jdbcType="VARCHAR" />
		<result property="id" column="C_ID" javaType="string" jdbcType="VARCHAR" />
		<result property="groupType" column="C_GROUP_TYPE" javaType="string" jdbcType="VARCHAR" />
		<result property="name" column="C_NAME" javaType="string" jdbcType="VARCHAR" />
		<result property="sortId" column="C_SORT_ID" javaType="_int" jdbcType="SMALLINT" />
		<result property="tag1" column="C_TAG1" javaType="string" jdbcType="VARCHAR" />
		<result property="tag2" column="C_TAG2" javaType="string" jdbcType="VARCHAR" />
		<result property="tag3" column="C_TAG3" javaType="string" jdbcType="VARCHAR" />
		<result property="tag4" column="C_TAG4" javaType="string" jdbcType="VARCHAR" />
		<result property="isCustom" column="C_IS_CUSTOM" javaType="_int" jdbcType="TINYINT" />
	</resultMap>

	<sql id="Query_Where_Clause">
		<trim prefix="WHERE" prefixOverrides="AND |OR ">
			<if test="desc != null and desc != ''">
				AND C_DESC = #{desc}
			</if>

			<if test="id != null and id != ''">
				AND C_ID = #{id}
			</if>

			<if test="groupType != null and groupType != ''">
				AND C_GROUP_TYPE = #{groupType}
			</if>

			<if test="name != null and name != ''">
				AND C_NAME = #{name}
			</if>

			<if test="sortId != 0 ">
				AND C_SORT_ID = #{sortId}
			</if>

			<if test="tag1 != null and tag1 != ''">
				AND C_TAG1 = #{tag1}
			</if>

			<if test="tag2 != null and tag2 != ''">
				AND C_TAG2 = #{tag2}
			</if>

			<if test="tag3 != null and tag3 != ''">
				AND C_TAG3 = #{tag3}
			</if>

			<if test="tag4 != null and tag4 != ''">
				AND C_TAG4 = #{tag4}
			</if>

		</trim>
	</sql>

	<!-- Insert POJO object -->
	<insert id="insert" parameterType="com.riil.base.binding.pojo.MetricGroupExtendPojo">
		INSERT INTO
		t_moni_metric_group ( C_DESC, C_ID, C_GROUP_TYPE, C_NAME,
		C_SORT_ID,
		C_TAG1, C_TAG2, C_TAG3, C_TAG4,C_IS_CUSTOM )
		VALUES( #{desc}, #{id}, #{groupType},
		#{name}, #{sortId}, #{tag1}, #{tag2},
		#{tag3}, #{tag4}, #{isCustom}  )
    </insert>
    
    <!--batch Insert POJO object -->
	<insert id="batchInsert" parameterType="list">
		INSERT INTO t_moni_metric_group( C_DESC, C_ID, C_GROUP_TYPE, C_NAME,C_SORT_ID,
		C_TAG1, C_TAG2, C_TAG3, C_TAG4,C_IS_CUSTOM )
		VALUES
		<foreach collection="list" item="item" separator=",">
			(  #{item.desc}, #{item.id}, #{item.groupType},
		#{item.name}, #{item.sortId}, #{item.tag1}, #{item.tag2},
		#{item.tag3}, #{item.tag4}, #{item.isCustom} )
        </foreach>
	</insert>

	<!-- Update POJO object by ID -->
	<update id="update_by_id" parameterType="com.riil.base.binding.pojo.MetricGroupExtendPojo">
		UPDATE
		t_moni_metric_group
		SET C_DESC = #{desc},
		C_ID = #{id},
		C_GROUP_TYPE =
		#{groupType},
		C_NAME = #{name},
		C_SORT_ID = #{sortId},
		C_TAG1 = #{tag1},
		C_TAG2 = #{tag2},
		C_TAG3 = #{tag3},
		C_TAG4 = #{tag4}
		WHERE C_ID = #{id}
	</update>

	<!-- Delete POJO object by ID -->
	<delete id="delete_by_id" parameterType="string">
		DELETE FROM
		t_moni_metric_group WHERE C_ID = #{id}
    </delete>

	<!-- Delete all POJO object -->
	<delete id="delete_all">
		DELETE FROM t_moni_metric_group
    </delete>

	<!-- Delete POJO object by query -->
	<delete id="delete_by_query" parameterType="com.riil.base.binding.pojo.MetricGroupExtendPojo">
		DELETE FROM t_moni_metric_group
		<include refid="Query_Where_Clause" />
	</delete>

	<!-- Select POJO object by ID -->
	<select id="select_by_id" parameterType="string" resultMap="metricGroupResultMap">
		SELECT C_DESC, C_ID, C_GROUP_TYPE, C_NAME, C_SORT_ID, C_TAG1, C_TAG2,
		C_TAG3, C_TAG4
		FROM t_moni_metric_group
