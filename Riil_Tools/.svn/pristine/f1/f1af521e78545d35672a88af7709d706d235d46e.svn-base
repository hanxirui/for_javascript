<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.riil.base.resmodel.impl.db.dao.MetricBaseDao">

	<resultMap id="metricBaseResultMap" type="com.riil.base.resmodel.pojo.base.MetricBasePojo">
		<result property="dataType" column="C_DATA_TYPE" javaType="string" jdbcType="VARCHAR" />
		<result property="desc" column="C_DESC" javaType="string" jdbcType="VARCHAR" />
		<result property="id" column="C_ID" javaType="string" jdbcType="VARCHAR" />
		<result property="metricType" column="C_METRIC_TYPE" javaType="string" jdbcType="VARCHAR" />
		<result property="name" column="C_NAME" javaType="string" jdbcType="VARCHAR" />
		<result property="sortId" column="C_SORT_ID" javaType="_int" jdbcType="INTEGER" />
		<result property="tag1" column="C_TAG1" javaType="string" jdbcType="VARCHAR" />
		<result property="tag2" column="C_TAG2" javaType="string" jdbcType="VARCHAR" />
		<result property="unit" column="C_UNIT" javaType="string" jdbcType="VARCHAR" />
		<result property="isCustom" column="C_IS_CUSTOM" javaType="_byte" jdbcType="TINYINT" />
	</resultMap>
	
	<sql id="foreachId">
		<foreach item="item" index="index" collection="ids" open="(" separator="," close=")">
			#{item}
        </foreach>
	</sql>
	
	<sql id="select_metricBase_Query_Base">
			metric.C_DATA_TYPE,
			metric.C_DESC,
			metric.C_ID,
			metric.C_METRIC_TYPE,
			metric.C_NAME,
			metric.C_TAG1,
			metric.C_TAG2,
			metric.C_UNIT,
			metric.C_SORT_ID,
		    metric.C_IS_CUSTOM
	</sql>
	
	<sql id="Query_Where_Clause">
		<trim prefix="WHERE" prefixOverrides="AND |OR ">
			<if test="id != null and id != ''">
				AND metric.C_ID = #{id}
			</if>
			
			<if test="dataType != null and dataType != ''">
				AND metric.C_DATA_TYPE = #{dataType}
			</if>

			<if test="desc != null and desc != ''">
				AND metric.C_DESC = #{desc}
			</if>

			<if test="metricType != null and metricType != ''">
				AND metric.C_METRIC_TYPE = #{metricType}
			</if>

			<if test="name != null and name != ''">
				AND metric.C_NAME = #{name}
			</if>

			<if test="sortId != 0 ">
				AND metric.C_SORT_ID = #{sortId}
			</if>

			<if test="tag1 != null and tag1 != ''">
				AND metric.C_TAG1 = #{tag1}
			</if>

			<if test="tag2 != null and tag2 != ''">
				AND metric.C_TAG2 = #{tag2}
			</if>

			<if test="unit != null and unit != ''">
				AND metric.C_UNIT = #{unit}
			</if>
			
			<if test="isCustom != null and isCustom != ''">
				AND metric.C_IS_CUSTOM = #{isCustom}
			</if>
		</trim>
	</sql>
	
	<sql id="Query_Where_Clause_View">
		<trim prefix="WHERE" prefixOverrides="AND |OR ">
			<if test="dataType != null and dataType != ''">
				AND metric.C_DATA_TYPE = #{dataType}
			</if>

			<if test="desc != null and desc != ''">
				AND metric.C_DESC = #{desc}
			</if>

			<if test="metricType != null and metricType != ''">
				AND metric.C_METRIC_TYPE = #{metricType}
			</if>
			
			<if test="metricTypes !=null and metricTypes.size() >0 ">
				AND metric.C_METRIC_TYPE  IN
				<foreach item="item" index="index" collection="metricTypes" open="(" separator="," close=")">
					#{item}
			    </foreach>
			</if>

			<if test="name != null and name != ''">
				AND metric.C_NAME = #{name}
			</if>

			<if test="sortId != 0 ">
				AND metric.C_SORT_ID = #{sortId}
			</if>

			<if test="tag1 != null and tag1 != ''">
				AND metric.C_TAG1 = #{tag1}
			</if>

			<if test="tag2 != null and tag2 != ''">
				AND metric.C_TAG2 = #{tag2}
			</if>

			<if test="unit != null and unit != ''">
				AND metric.C_UNIT = #{unit}
			</if>
			
			<if test="isCustom != null and isCustom != ''">
				AND metric.C_IS_CUSTOM = #{isCustom}
			</if>
			
			<if test="metricGroupId != null and metricGroupId != ''">
				AND mgr.C_METRIC_GROUP_ID = #{metricGroupId}
			</if>
			
			<if test="modelId != null and modelId != ''">
				AND model.C_MODEL_ID = #{modelId}
			</if>
			
			<if test="resTypeId != null and resTypeId != ''">
				AND model.C_RES_TYPE_ID = #{resTypeId}
			</if>
			
		</trim>
	</sql>
	
	<!-- Insert POJO object -->
	<insert id="insert" parameterType="com.riil.base.resmodel.pojo.base.MetricBasePojo">
		INSERT INTO t_moni_metric_base ( C_DATA_TYPE, C_DESC, C_ID,
		C_METRIC_TYPE, C_NAME,
		C_SORT_ID, C_TAG1, C_TAG2, C_UNIT,C_IS_CUSTOM )
		VALUES( #{dataType}, #{desc}, #{id}, 
		#{metricType}, #{name}, #{sortId}, #{tag1}, #{tag2}, #{unit},#{isCustom} )
	</insert>

	<!-- Update POJO object by ID -->
	<update id="update_by_id" parameterType="com.riil.base.resmodel.pojo.base.MetricBasePojo">
		UPDATE t_moni_metric_base
		SET C_DATA_TYPE = #{dataType},
		C_DESC = #{desc},
		C_ID = #{id},
		C_METRIC_TYPE = #{metricType},
		C_NAME = #{name},
		C_SORT_ID = #{sortId},
		C_TAG1 = #{tag1},
		C_TAG2 = #{tag2},
		C_UNIT = #{unit}
		WHERE C_ID = #{id}
    </update>

	<!-- Delete POJO object by ID -->
	<delete id="delete_by_id" parameterType="string">
		DELETE FROM t_moni_metric_base WHERE C_ID = #{id}
    </delete>

	<!-- Delete all POJO object -->
	<delete id="delete_all">
		DELETE FROM t_moni_metric_base
    </delete>

	<!-- Delete POJO object by query -->
	<delete id="delete_by_query" parameterType="com.riil.base.resmodel.pojo.base.MetricBasePojo">
		DELETE FROM t_moni_metric_base
		<include refid="Query_Where_Clause" />
	</delete>

	<!-- Select POJO object by ID -->
	<select id="select_by_id" parameterType="string" resultMap="metricBaseResultMap">
		SELECT 
		<include refid="select_metricBase_Query_Base"/>
		FROM t_moni_metric_base metric
		WHERE metric.C_ID = #{id}
    </select>

	<!-- Select POJO object by query -->
	<select id="select_one_by_query" parameterType="com.riil.base.resmodel.pojo.base.MetricBasePojo"
		resultMap="metricBaseResultMap">
		SELECT
		<include refid="select_metricBase_Query_Base"/>
		FROM t_moni_metric_base metric
		<include refid="Query_Where_Clause" />
	</select>

	<!-- Select All POJO object -->
	<select id="select_all" parameterType="com.riil.base.resmodel.pojo.base.MetricBasePojo"
		resultMap="metricBaseResultMap">
		SELECT 
			<include refid="select_metricBase_Query_Base"/>
		FROM t_moni_metric_base metric
		<trim prefix="ORDER BY">
			<if test="orderBy != null and orderBy != ''">
				${orderBy}
			</if>
		</trim>
	</select>
	
	<!-- Select POJO object list by query -->
	<select id="select_list_by_model_id" parameterType="String" resultMap="metricBaseResultMap">
		SELECT
			<include refid="select_metricBase_Query_Base"/>
		FROM
			t_moni_metric_base metric 
				INNER JOIN t_moni_model_metric_rel rel ON rel.c_metric_id = metric.c_id 
				AND C_MODEL_ID = #{modelId}
		ORDER BY metric.C_SORT_ID
    </select>
	
	
	<select id="select_by_ids" parameterType="com.riil.base.resmodel.pojo.ModelQueryParam" resultMap="metricBaseResultMap">
		SELECT
			<include refid="select_metricBase_Query_Base"/>
		FROM
			t_moni_metric_base metric 
		WHERE metric.C_ID IN 
		<include refid="foreachId" />
		ORDER BY metric.C_SORT_ID
    </select>
    
    <select id="s_select_by_ids_and_res_type_id" parameterType="com.riil.base.resmodel.pojo.ModelQueryParam" resultMap="metricBaseResultMap"> 
    	SELECT 
			<include refid="select_metricBase_Query_Base"/>
		FROM
		  t_moni_metric_base metric 
		  INNER JOIN 
		    (SELECT 
		      * 
		    FROM
		      t_moni_model_metric_rel model
		   <trim prefix="WHERE" prefixOverrides="AND |OR ">
				<if test="resTypeId != null and resTypeId != ''">
					AND model.C_RES_TYPE_ID = #{resTypeId}
				</if>
			
		</trim>
		      AND c_metric_id IN 
				<include refid="foreachId" />
			) temp ON metric.c_id = temp.c_metric_id
    </select>
    
	<!-- Select POJO object list by query -->
	<select id="select_list_by_query" parameterType="com.riil.base.resmodel.pojo.base.ModelMetricViewPojo"
		resultMap="metricBaseResultMap">
		SELECT 
			<include refid="select_metricBase_Query_Base"/>
		FROM t_moni_metric_base metric
		INNER JOIN t_moni_metric_group_rel mgr 
		    ON metric.C_ID = mgr.C_METRIC_ID 
		  INNER JOIN t_moni_model_metric_rel model 
		    ON model.C_METRIC_ID = metric.C_ID 
		<include refid="Query_Where_Clause_View" />
		<trim prefix="ORDER BY">
			<if test="orderBy != null and orderBy != ''">
				${orderBy}
			           </if>
		</trim>
	</select>
	
	<select id="select_list_by_model_metric" parameterType="com.riil.base.resmodel.pojo.base.ModelMetricViewPojo"
		resultMap="metricBaseResultMap">
		SELECT 
			<include refid="select_metricBase_Query_Base"/>
		FROM t_moni_metric_base metric
		  INNER JOIN t_moni_model_metric_rel model 
		    ON model.C_METRIC_ID = metric.C_ID 
		WHERE metric.C_ID = #{metricId}
  		AND model.C_MODEL_ID =  #{modelId}
	</select>
	
	<!-- Select POJO object collection for page by query -->
	<select id="select_pagelist_by_query" parameterType="com.riil.base.resmodel.pojo.base.MetricBasePojo"
		resultMap="metricBaseResultMap">
		SELECT 
			<include refid="select_metricBase_Query_Base"/>
		FROM t_moni_metric_base metric
		<include refid="Query_Where_Clause" />
		<trim prefix="ORDER BY">
			<if test="orderBy != null and orderBy != ''">
				${orderBy}
			           </if>
		</trim>
		limit ${startIndex}, ${pageSize}
	</select>
	
	<insert id="batchInsert" parameterType="list">
		INSERT INTO t_moni_metric_base (C_DATA_TYPE, C_DESC, C_ID,C_METRIC_TYPE, C_NAME,
		C_SORT_ID, C_TAG1, C_TAG2, C_UNIT,C_IS_CUSTOM)
		VALUES
		<foreach collection="list" item="item" separator=",">
			(#{item.dataType}, #{item.desc}, #{item.id}, #{item.metricType}, #{item.name}, #{item.sortId},
		#{item.tag1}, #{item.tag2}, #{item.unit},#{item.isCustom})		
		</foreach>
	</insert>
	
	<select id="select_list_by_res_type_id_and_metric_type" parameterType="com.riil.base.resmodel.pojo.base.ModelMetricViewPojo"
		resultMap="metricBaseResultMap">
		SELECT 
		 <include refid="select_metricBase_Query_Base"/>
		  ,model.C_METRIC_ID
		FROM 
		 t_moni_metric_base metric
		 RIGHT JOIN
		   (SELECT 
		    DISTINCT mml.C_METRIC_ID
		  FROM
		    t_moni_model_metric_rel mml 
		  WHERE mml.C_RES_TYPE_ID =  #{resTypeId} ) model ON model.C_METRIC_ID = metric.C_ID  
		  <trim prefix="WHERE" prefixOverrides="AND |OR ">
		  	<if test="metricType != null and metricType != ''">
				AND metric.C_METRIC_TYPE = #{metricType}
			</if>
		  
		  </trim>
	</select>
	
</mapper>
